<?xml-stylesheet type="text/css" href="newEvent-page.css"?>
<Page
        navigatingTo="onNavigatingTo"
        xmlns="http://schemas.nativescript.org/tns.xsd">


    <ActionBar>
        <!--
        Use the NavigationButton as a side-drawer button in Android
        because ActionItems are shown on the right side of the ActionBar
        -->
        <NavigationButton ios:visibility="collapsed" icon="res://menu" tap="onDrawerButtonTap"></NavigationButton>
        <!--
        Use the ActionItem for IOS with position set to left. Using the
        NavigationButton as a side-drawer button in iOS is not possible,
        because its function is to always navigate back in the application.
        -->
        <ActionItem icon="res://navigation/menu"
                    android:visibility="collapsed"
                    tap="onDrawerButtonTap"
                    ios.position="left">
        </ActionItem>
        <Label class="navTitle" text="Create Event"></Label>
    </ActionBar>


    <FlexboxLayout class="page">
        <ScrollView orientation="vertical">
        <StackLayout class="form">
            <StackLayout class="input-field">
                <Label class="inputLabel" text="What?"></Label>
                <TextField backgroundColor="white" class="input"></TextField>
            </StackLayout>

            <StackLayout class="input-field">
                <Label class="inputLabel" text="When?"></Label>
                <DatePicker class="date-picker"></DatePicker>
                <TimePicker class="date-picker"></TimePicker>
            </StackLayout>

            <StackLayout class="input-field">
                <Label class="inputLabel" text="Where?"></Label>
                <TextField backgroundColor="white" class="input"></TextField>
            </StackLayout>

            <StackLayout class="input-field">
                <Label class="inputLabel" text="Who?"></Label>
                <TextField backgroundColor="white" class="input"></TextField>
            </StackLayout>

            <StackLayout class="input-field">
                <Label class="inputLabel" text="More Deets!"></Label>
                <TextField backgroundColor="white" class="input"></TextField>
            </StackLayout>

            <Button text="POST" class="button"></Button>
        </StackLayout>
        </ScrollView>
    </FlexboxLayout>


</Page>
